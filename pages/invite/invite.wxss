
/* pages/invite/invite.wxss */

.pageStyle {
  position: fixed;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #d4237a;
}

.inviteView {
  width: 80%;
  left: 10%;
  background-color: #fff;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 3rpx solid #fff;
  box-shadow: #f5f5f5 0px 0px 10px 5px;
}

.backImage {
  width: 100%;
  height: 50%;
  background-color: #f5f5f5;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.titlename {
  margin-top: 10rpx;
  color: #d4237a;
  font-size: 20px;
  font-weight: bold;
  padding: 10rpx;
}

.msgtext {
  color: #000;
  font-size: 16px;
  text-align: center;
  padding: 10rpx;
}
