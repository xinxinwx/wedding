/* pages/like/like.wxss */
.tipView{
  position: fixed;
  width:100%;
  height: 80rpx;
  z-index: 0;
  margin-top: -110rpx
}

.likeliststyle {
  width: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  align-items: stretch;
  border-bottom: 1rpx solid #f5f5f5;
}

.listLeftView {
  width: 100rpx;
  margin: 20rpx;
}

.listRightView {
  width: calc(100% - 160rpx);
  display: flex;
  flex-direction: column;
  align-items: stretch;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  margin-right: 20rpx;
}

.name {
  color: #d4237a;
  font-size: 16px;
  word-break:break-all;
  white-space:pre-wrap;
}

.content {
  color: #000;
  font-size: 14px;
  margin-top: 6px;
  word-break:break-all;
  white-space:pre-wrap;
}

.time {
  color: #8a8a8a;
  font-size: 12px;
  margin-top: 8px;
}

.huifuView{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 8px;
}





.send_msg {
  width: 100%;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  border-top: 1px solid #f5f5f5;
  display: flex;
  flex-direction: row;
  align-items: center;
  z-index: 99;
}

.send_ipt {
  width: 500rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin: 20rpx;
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 5px;
}

.send_btn {
  color: #fff;
  width: calc(100% - 560rpx);
  height: 80rpx;
  font-size: 30rpx;
  line-height: 50rpx;
  background: #d4237a;
  margin-right: 20rpx;
 
}

.cradView {
  width: 670rpx;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-bottom: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userView {
  width: 100%;
  color: #000;
  font-size: 14px;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.headImage {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.timeText {
  font-size: 12px;
  text-align: end;
  position: absolute;
  right: 40rpx;
  word-break: break-all;
  white-space: pre-wrap;
  z-index: 98;
}

.cardText {
  width: calc(100% - 40rpx);
  color: #ffff;
  font-size: 16px;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin-top: 20rpx;
  text-align: center;
  border-radius: 10rpx;
  background-color: #DC237A;
  word-break:break-all;
  white-space:pre-wrap;
}

.item{
  margin-top: 0rpx;
  margin-bottom: 90rpx;
}